import heapq

def min_cost_to_connect_cables(cables):
    # Якщо кабелів немає або він один, витрати на з'єднання = 0
    if not cables or len(cables) == 1:
        return 0
    
    # 1. Створюємо купу (heapify перетворює список на купу за лінійний час)
    heapq.heapify(cables)
    
    total_cost = 0
    
    # 2. Поки в купі більше одного кабеля
    while len(cables) > 1:
        # Витягуємо два найменші кабелі
        first = heapq.heappop(cables)
        second = heapq.heappop(cables)
        
        # Рахуємо витрати на це з'єднання
        current_cost = first + second
        
        # Додаємо до загальних витрат
        total_cost += current_cost
        
        # Кладемо новий "з'єднаний" кабель назад у купу
        heapq.heappush(cables, current_cost)
        
    return total_cost

# --- Тестування ---

# Приклад даних (кабелі різної довжини)
cables = [4, 3, 2, 6]
# Логіка ручного підрахунку для перевірки:
# 1. Сортуємо/Купа: [2, 3, 4, 6]
# 2. Беремо 2 і 3. Сума 5. Витрати = 5. Купа: [4, 5, 6]
# 3. Беремо 4 і 5. Сума 9. Витрати = 5 + 9 = 14. Купа: [6, 9]
# 4. Беремо 6 і 9. Сума 15. Витрати = 14 + 15 = 29. Купа: [15]
# Результат має бути 29.

result = min_cost_to_connect_cables(cables)
print(f"Вхідні кабелі (були модифіковані купою): {cables}") # Увага: heapify змінює список in-place
print(f"Мінімальні витрати на з'єднання: {result}")
